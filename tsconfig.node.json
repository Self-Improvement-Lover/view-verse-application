{
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jasmine"], // maybe delete this>
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // or node maybe 
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx", "spec/**/*.ts", "spec/**/*.tsx", "spec/**/*.ts", "src/**/*.ts"]
}
